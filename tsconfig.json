{
    "compilerOptions": {
      "target": "es6",                                  
      "module": "commonjs",                             
      "strict": true,                                
      "esModuleInterop": true,       
      "skipLibCheck": true,                              
      "forceConsistentCasingInFileNames": true,        
      "outDir": "./dist",                               
      "rootDir": "./src",                               
      "baseUrl": "./",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,                            
      "paths": {
        "@app/*": ["src/*"]                              
      }
    },
    "include": ["src/**/*"],                       
    "exclude": ["node_modules", "dist"]     
  }
  