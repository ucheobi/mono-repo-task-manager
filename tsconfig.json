{
    "compilerOptions": {
      "target": "es6",                                  
      "module": "commonjs",                             
      "strict": true,                                
      "esModuleInterop": true,   
      "moduleResolution": "Node",    
      "skipLibCheck": true,                              
      "forceConsistentCasingInFileNames": true,        
      "outDir": "./dist",                                                            
      "baseUrl": ".",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,                            
      "paths": {
        "@app/*": ["src/*"],
        "@shared/*": ["packages/shared/*"]                             
      }
    },
    "include": ["packages/*/src/**/*"],                       
    "exclude": ["node_modules", "dist"]     
  }
  